<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2sp"
            android:text="Objet: "
            android:textColor="#8c8c8c"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/scenario_obect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="93sp"
            android:paddingTop="2sp"
            android:textColor="#8c8c8c"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/scenario_object_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action: "
            android:textColor="#8c8c8c"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/scenario_object_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80sp"
            android:textColor="#8c8c8c"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ParamÃ¨tres: "
            android:textColor="#8c8c8c"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/scenario_object_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:textColor="#8c8c8c"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>